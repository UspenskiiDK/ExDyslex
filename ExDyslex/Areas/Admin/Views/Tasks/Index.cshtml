@using Entities

@model List<Entities.Task>

@{
    Layout = "Layout";
}



<div class="table-responsive" style="margin-top:100px;margin-right: 300px;margin-left: 300px;padding-right: 0px;padding-left: 0px;">
    <table class="table">
        <thead>
            <tr>
                <th style="text-align: center;">Название</th>
                <th style="text-align: center;">Редактирование</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Count > 0)
            {
                for (int i = 0; i < Model.Count; i++)
                {
                    <tr>
                        <td style="text-align: center;">@Model[i].TaskQuestion</td>
                        <td style="text-align: center;"><a href="@Url.Action("Task", "Tasks", new {area = "Admin", id = Model[i].Id})">Редактировать</a></td>
                    </tr>
                }
            }     
        </tbody>
    </table>
    <a href = "@Url.Action("NewTask", "Tasks", new {Area = "Admin"})" class="btn btn-primary bg-primary border rounded-pill" type="submit" style="margin-top: 24px;padding-right: 54px;padding-left: 48px;background-color: #727CD6 !important;margin-left: 300px;margin-right: 180px;">Добавить новое задание</a>
</div>
