@using Entities

@model List<Client>

@{
    Layout = "Layout";
}

<h1>Список Пользователей</h1>
<div class="user-list">
    @if (Model != null && Model.Count > 0)
    {
        foreach (var client in Model)
        {
            <div class="user">
                <div class="user-info">
                    <h3>@($"{client.LastName} {client.FirstName} {client.PatronymicName}")</h3>
                    <p>Email: @client.Email</p>
                    <p>Дата рождения: @client.Birthday.ToShortDateString()</p>
                </div>
            </div>
        }
    }
    else
    {
        <h1>На данный момент пользователей системы не обнаружено!</h1>
    }
</div>
